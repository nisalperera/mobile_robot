<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="$(find mobile_robot)/description/xacro/inertial_macros.xacro" />

    <!-- Front wheel -->
    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="chassis" />
        <child link="front_right_wheel" />
        <origin xyz="0.25 -0.175 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1" />
    </joint>

    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.024" length="0.025" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.024" length="0.025" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.025" radius="0.024">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="front_right_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- Rear wheel -->
    <joint name="rear_right_wheel_joint" type="continuous">
        <parent link="chassis" />
        <child link="rear_right_wheel" />
        <origin xyz="0.05 -0.175 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1" />
    </joint>

    <link name="rear_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.024" length="0.025" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.024" length="0.025" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.025" radius="0.024">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>


    <gazebo reference="rear_right_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

</robot>